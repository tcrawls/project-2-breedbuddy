<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Breed Buddy</h1>
        <p class="lead text-muted">Learn about dog breeds, share your breed knowledge, and find a breeder near you.</p>
        <p><a href="/breeds/new" class="btn btn-primary my-2">Create New Breed</a></p>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            {{#each breeds}}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="{{imgLink}}" alt="Image of {{name}}" class="bd-placeholder-img card-img-top" width="100%"
                        height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice"
                        focusable="false" role="img">
                    <title>{{name}}</title>
                    <rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef"
                        dy=".3em">{{name}}</text>
                    </svg>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <p><a href="/breeds/{{_id}}" class="btn btn-sm btn-outline-secondary">View Breed</a></p>
                        </div>
                    </div>

                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>