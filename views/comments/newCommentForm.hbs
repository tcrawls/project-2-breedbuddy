<body class="form-body">
    <h1>{{breed.name}}</h1>
    <h3>Post a review:</h3>
    <form method="POST" action="/breeds/{{breed._id}}/comment">
        <div class="form-fields">
            <div class="form-group">
                <label for="createdAt">Date Posted:</label>
                <input type="date" name="createdAt" id="createdAt" class="form-control" />
            </div>
            <div class="form-group">
                <label for="submitter">Your Name:</label>
                <input type="text" name="submitter" id="submitter" class="form-control" />
            </div>
            <div class="form-group">
                <label for="description">What would you like to say?</label>
                <textarea name="description" id="description" cols="30" rows="10" class="form-control"></textarea>
            </div>
        </div>
        <input type="submit" value="Create Review" />
    </form>
</body>