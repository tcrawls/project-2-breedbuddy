<body class="form-body">
    <h3>Edit review:</h3>
    <form method="POST" action="/breeds/{{comment.breedId}}/comment/{{comment._id}}?_method=PUT">
        <div class="form-fields">
            <div class="form-group">
                <label for="submitter">Submitted By:</label>
                <input type="text" name="submitter" id="submitter" value="{{comment.submitter}}" class="form-control" />
            </div>
            <div class="form-group">
                <label for="createdAt">Date Submitted:</label>
                <input type="date" name="createdAt" id="createdAt" value="{{comment.createdAt}}" class="form-control" />
            </div>
            <div class="form-group">
                <label for="description">Comment:</label>
                <textarea name="description" id="description" cols="30" rows="10" class="form-control" value="comment.description">{{comment.description}}</textarea>
            </div>
            <input type="submit" value="Update Review" />
        </div>
    </form>
